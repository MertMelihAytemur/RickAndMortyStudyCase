<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:background="@android:color/white"
        android:src="@drawable/splash"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_huge"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:textSize="@dimen/fontSize_huge"
        app:layout_constraintTop_toBottomOf="@id/imageViewLogo"
        tools:layout_editor_absoluteX="24dp"
        tools:text="@string/onBoardingPage_first_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_huge"
        android:layout_marginTop="@dimen/spacing_huge"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:textColor="@color/color_textColor_300"
        android:textSize="@dimen/fontSize_medium"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        tools:layout_editor_absoluteX="24dp"
        tools:text="@string/onBoardingPage_first_description" />


</androidx.constraintlayout.widget.ConstraintLayout>